{% extends 'base.html.twig' %}

{% block title %}{{product.name}} -diéré{% endblock %}

{% block content %}

<div class="row">
<div class="col-md-5">
<img class=" img card-img-top img-responsive img-fluid"  src="/uploads/{{ product.illustration}}" alt="image illustration du produit">
</div>
<div class="col-md-6">
<h3>{{ product.name }}</h3>
<p>{{product.subtitle}}</p>
<p><span class="product-price">{{ (product.price /100)|number_format(2) }} €</span></p>
<hr>
<p>{{product.description}}</p>
 <a href="{{path('add_to_cart', {'id' : product.id} ) }}" class="btn btn-primary">Ajouter dans le panier</a>
</div>
</div>


{% endblock %}
